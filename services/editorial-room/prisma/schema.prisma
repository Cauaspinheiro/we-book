// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Writer {
  // not default to uuid because must match with auth service id
  id String @id

  email String @unique

  createdAt DateTime

  @@map("writers")
}
