// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Writer {
  // not default to uuid because must match with auth service id
  id String @id

  email String @unique
  name  String

  createdAt DateTime

  drafts WriterDraft[]

  @@map("writers")
}

model Draft {
  id String @id @default(uuid())

  content     String  @db.Text // already default to Text, but just to make sure...
  title       String
  description String?
  urlPath     String? @unique
  ogCover     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  writers WriterDraft[]

  @@map("drafts")
}

model WriterDraft {
  id String @id @default(uuid())

  isCreator Boolean @default(false)

  draftId  String
  writerId String

  draft  Draft  @relation(fields: [draftId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  writer Writer @relation(fields: [writerId], references: [id])

  @@map("writers_drafts")
}
